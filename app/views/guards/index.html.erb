<p id="notice"><%= notice %></p>

<h1>Listing Guards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guards.each do |guard| %>
      <tr>
        <td><%= link_to guard.last_name, guard_path(guard) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

