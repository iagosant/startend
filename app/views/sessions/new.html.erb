<div class="section valign-wrapper">
  <div class="ms-login card">
    <div class="white card-content">
      <h4 class="center-align">Welcome Back!</h4>
      <div class="row">
        <div class="col s12">
          <%= form_tag '/login' do %>
          <div class="input-field">
            <%= text_field_tag :email %>
            <label for="email" class="">Email</label>
          </div>
          <div class="input-field">
            <%= password_field_tag :password %>
            <label for="password" class="">Password</label>
          </div>

          <a class="waves-effect waves-light btn"><%= submit_tag "Enter" %></a>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col s12 m6 right-align border-right">
        <%= link_to "Forgot password?", new_password_reset_path %>
      </div>
      <!-- <div class="col s12 m6 right-align border-right">
        <%#= link_to "New User", new_user_path %>
      </div> -->
    </div>
  </div>
</div>
